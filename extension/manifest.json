{
  "manifest_version": 3,
  "name": "T&C Summarizer",
  "version": "1.0",
  "description": "Detects and summarizes Terms and Conditions.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html"
  }
}
